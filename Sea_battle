#include <iostream>
#include <Windows.h>
#define random(min,max) (min + rand() % (max - min + 1))
using namespace std;

//O - символ промаха 
//¤ - символ попадания 
//~ - заполнение поля 
//⌂ - символ корабля

// 16 / 164 / 127

//void show() {
//	for (int i = 0; i < 600; i++) {
